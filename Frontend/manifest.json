{
  "name": "My Extension",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "src/assets/locales/en/translation.json",
        "src/assets/locales/*/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "permissions": ["storage"]
}
